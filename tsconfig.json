{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
    
    
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/pages/admin/jobs/new.jsx", "src/pages/admin/jobs/[id]/edit.jsx", ],
  "exclude": ["node_modules"]
}
